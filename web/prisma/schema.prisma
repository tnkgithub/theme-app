generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poster {
  id       String   @id
  title     String
  explanation String
  somCoordinate Int
  representationsCoordinate Int?
  objWord objWord[]
}

model objWord {
  word String
  posterId String
  poster Poster @relation(fields: [posterId], references: [id])
  @@id([word, posterId])
}